{
    "compilerOptions": {
        "jsx": "react",
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strictNullChecks": false,
        "types": ["@types/styled-components"],
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "exclude": ["node_modules", ".npm"],
    "include": ["src/**/*", "tests/**/*"]
}
