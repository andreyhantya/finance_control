{
    "compilerOptions": {
        "jsx": "react",
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strictNullChecks": false,
        "types": ["@types/styled-components"]
    },
    "exclude": ["node_modules", ".npm"]
}
